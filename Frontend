#!/bin/bash

# Frontend dev server launcher
# Usage: ./Frontend [-v]
#   -v  Verbose mode - output to both terminal and log file

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LOG_DIR="$SCRIPT_DIR/Logs"
LOG_FILE="$LOG_DIR/frontend.log"
PORT=5173
VERBOSE=false

# Parse arguments
while getopts "v" opt; do
  case $opt in
    v) VERBOSE=true ;;
    *) echo "Usage: $0 [-v]"; exit 1 ;;
  esac
done

# Ensure Logs directory exists
mkdir -p "$LOG_DIR"

# Kill any existing frontend server processes on port 5173
echo "Checking for existing frontend processes on port $PORT..."
PIDS=$(lsof -ti :$PORT 2>/dev/null)
if [ -n "$PIDS" ]; then
  echo "Killing existing processes: $PIDS"
  echo "$PIDS" | xargs kill -9 2>/dev/null
  sleep 1
fi

# Clear terminal
clear

echo "Starting frontend dev server..."
echo "Logs: $LOG_FILE"
if [ "$VERBOSE" = true ]; then
  echo "Verbose mode: ON"
fi
echo "---"

# Change to project directory
cd "$SCRIPT_DIR"

# Start the frontend server
if [ "$VERBOSE" = true ]; then
  # Verbose: output to both terminal and log file
  npm run dev:frontend 2>&1 | tee "$LOG_FILE"
else
  # Quiet: output to log file only
  npm run dev:frontend > "$LOG_FILE" 2>&1
fi
